python $PWD/test.py hello
python $PWD/test.py "say_hi#Mendel"
python $PWD/test.py "do_some_math#3;2;1"

php -d auto_prepend_file=$PWD/bootstraps/php.php $PWD/test.php hello
php -d auto_prepend_file=$PWD/bootstraps/php.php $PWD/test.php "say_hi#Mendel"
php -d auto_prepend_file=$PWD/bootstraps/php.php $PWD/test.php "do_some_math#3;2;1"

ruby -r $PWD/bootstraps/rb.rb $PWD/test.rb hello
ruby -r $PWD/bootstraps/rb.rb $PWD/test.rb "say_hi#Mendel"
ruby -r $PWD/bootstraps/rb.rb $PWD/test.rb "do_some_math#3;2;1"