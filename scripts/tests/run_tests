python $PWD/test.py hello
python $PWD/test.py "say_hi#Mendel"
python $PWD/test.py "do_some_math#3;2;1"
python $PWD/test.py not_declared

php -d auto_prepend_file=$PWD/routers/php.php $PWD/test.php hello
php -d auto_prepend_file=$PWD/routers/php.php $PWD/test.php "say_hi#Mendel"
php -d auto_prepend_file=$PWD/routers/php.php $PWD/test.php "do_some_math#3;2;1"
php -d auto_prepend_file=$PWD/routers/php.php $PWD/test.php not_declared

ruby -r $PWD/routers/rb.rb $PWD/test.rb hello
ruby -r $PWD/routers/rb.rb $PWD/test.rb "say_hi#Mendel"
ruby -r $PWD/routers/rb.rb $PWD/test.rb "do_some_math#3;2;1"
ruby -r $PWD/routers/rb.rb $PWD/test.rb not_declared

perl -I$PWD/routers/ $PWD/test.pl hello
perl -I$PWD/routers/ $PWD/test.pl "say_hi#Mendel"
perl -I$PWD/routers/ $PWD/test.pl "do_some_math#3;2;1"
perl -I$PWD/routers/ $PWD/test.pl not_declared
